<!--mine.wxml-->
<view class="container">
  <view class="user-info">
    <image class="avatar" src="{{userInfo.avatarUrl || '/images/default_avatar.png'}}"></image>
    <view class="user-detail">
      <text class="nickname">{{userInfo.nickName || '点击登录'}}</text>
      <text class="phone">{{userInfo.phone || ''}}</text>
    </view>
  </view>

  <view class="page-section">
    <view class="menu-list">
      <view class="menu-item" bindtap="navigateToOrders">
        <view class="menu-left">
          <image class="menu-icon" src="/images/icon_order.png"></image>
          <text class="menu-text">我的预约</text>
        </view>
        <text class="menu-arrow">></text>
      </view>
      <view class="menu-item" bindtap="navigateToGraves">
        <view class="menu-left">
          <image class="menu-icon" src="/images/icon_grave.png"></image>
          <text class="menu-text">我的墓位</text>
        </view>
        <text class="menu-arrow">></text>
      </view>
      <view class="menu-item" bindtap="navigateToMemorials">
        <view class="menu-left">
          <image class="menu-icon" src="/images/icon_memorial.png"></image>
          <text class="menu-text">祭扫记录</text>
        </view>
        <text class="menu-arrow">></text>
      </view>
    </view>
  </view>

  <view class="page-section">
    <view class="menu-list">
      <view class="menu-item" bindtap="navigateToSettings">
        <view class="menu-left">
          <image class="menu-icon" src="/images/icon_setting.png"></image>
          <text class="menu-text">设置</text>
        </view>
        <text class="menu-arrow">></text>
      </view>
      <view class="menu-item" bindtap="navigateToAbout">
        <view class="menu-left">
          <image class="menu-icon" src="/images/icon_about.png"></image>
          <text class="menu-text">关于我们</text>
        </view>
        <text class="menu-arrow">></text>
      </view>
    </view>
  </view>
</view>
